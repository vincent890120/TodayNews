<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/item_bottomview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="央视曝陕西府谷县民间借贷崩盘 房价暴跌四成"
        style="@style/item_text_title" />

    <LinearLayout
        android:id="@+id/item_bottomview_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_bottomview_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推广"
            android:textSize="12sp"
            android:background="@drawable/fragment_item_icon_bg"
            android:textColor="@color/red"/>

        <TextView
            android:id="@+id/item_bottomview_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            style="@style/item_text_icon"
            android:text="齐家网" />

        <TextView
            android:id="@+id/item_bottomview_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            style="@style/item_text_icon"
            android:text="336条" />
        <TextView
            android:id="@+id/item_bottomview_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            style="@style/item_text_icon"
            android:text="52分钟前" />

    </LinearLayout>
</LinearLayout>
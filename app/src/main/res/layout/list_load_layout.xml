<?xml version="1.0" encoding="utf-8"?>
<com.example.vincent.todaynews.widget.LoadingItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="5dp"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/anim_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dip"
        android:src="@drawable/loading_small"/>

    <TextView
        android:id="@+id/tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加载中..."
        android:textAppearance="?android:attr/textAppearanceSmall" />

</com.example.vincent.todaynews.widget.LoadingItem>

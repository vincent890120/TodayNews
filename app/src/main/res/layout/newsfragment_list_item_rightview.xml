<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_rightview_title"
            style="@style/item_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="央视曝陕西府谷县民间借贷崩盘 房价暴跌四成" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_rightview_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/fragment_item_icon_bg"
                android:text="推广"
                android:textColor="@color/red"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_rightview_source"
                style="@style/item_text_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="齐家网" />

            <TextView
                android:id="@+id/item_rightview_comment"
                style="@style/item_text_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="336条" />

            <TextView
                android:id="@+id/item_rightview_time"
                style="@style/item_text_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="52分钟前" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/item_rightview_imageview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:scaleType="fitXY"></ImageView>
</LinearLayout>